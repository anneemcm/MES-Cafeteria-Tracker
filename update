  <div id="left-panel">
    <button class="sound-toggle" onclick="toggleSoundboard()">üîä</button>
    <div id="soundboard">
      <h2>üîä Soundboard</h2>
      <button class="sound-btn" onclick="playSound('shhh')">ü§´ Shhh</button>
